<Window x:Class="ShopShoes123.ProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShopShoes123"
        mc:Ignorable="d" Style="{StaticResource Windows}"
        Title="Продукты" Height="800" Width="1200">
    <Window.Resources>
        <local:ImagePathConverter x:Key="ImagePathConverter"/>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="150"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <TextBlock Name="FullUserName"
                   VerticalAlignment="Top"
                   HorizontalAlignment="Right"
                   Margin="20 10"/>

        <ScrollViewer Grid.Row="1">
            <ItemsControl Name="ProductList">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="10"
                                Background="{Binding Background}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Фото товара -->
                                <Border Grid.Column="0"
                                        Height="80"
                                        Width="80"
                                        Margin="15 0">
                                    <!-- Photo - строка с именем файла, например "1.jpg" -->
                                    <Image Source="{Binding Photo, Converter={StaticResource ImagePathConverter}}"/>
                                </Border>

                                <!-- Информация о товаре -->
                                <StackPanel Grid.Column="1">
                                    <!-- Категория и Артикул -->
                                    <TextBlock FontWeight="SemiBold">
                                        <Run Text="{Binding Categories.Category}"/> <!-- Исправлено -->
                                        <Run Text=" | "/>
                                        <Run Text="{Binding Article}"/> <!-- Исправлено -->
                                        <Run Text=" - "/>
                                        <Run Text="{Binding ProductNames.ProductName}"/> <!-- Добавлено -->
                                    </TextBlock>

                                    <!-- Описание -->
                                    <TextBlock Text="{Binding Description}"
                                               TextWrapping="Wrap"/>

                                    <!-- Поставщик -->
                                    <TextBlock>
                                        <Run Text="Поставщик: "/>
                                        <Run Text="{Binding Suppliers.Supplier}"/> <!-- Исправлено -->
                                    </TextBlock>

                                    <!-- Производитель -->
                                    <TextBlock>
                                        <Run Text="Производитель: "/>
                                        <Run Text="{Binding Producers.Producer}"/> <!-- Исправлено -->
                                    </TextBlock>

                                    <!-- Цена -->
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Цена: "/>
                                        <TextBlock Text="{Binding Price}"/>
                                        <TextBlock Text=" руб."/>
                                    </StackPanel>

                                    <!-- Единица измерения -->
                                    <TextBlock>
                                        <Run Text="Единица: "/>
                                        <Run Text="{Binding Unit}"/> <!-- Исправлено (без .Name) -->
                                    </TextBlock>

                                    <!-- Количество на складе -->
                                    <TextBlock>
                                        <Run Text="На складе: "/>
                                        <Run Text="{Binding QuantityInStock}"/> <!-- Исправлено -->
                                        <Run Text=" шт."/>
                                    </TextBlock>
                                </StackPanel>

                                <!-- Скидка -->
                                <Border Grid.Column="2" Margin="0 0 20 0">
                                    <StackPanel>
                                        <TextBlock FontWeight="Bold" Foreground="Black">
                                            <Run Text="Скидка "/>
                                            <Run Text="{Binding Discount}"/>
                                            <Run Text="%"/>
                                        </TextBlock>
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <Button Name="LogOutButton"
                Content="Выйти"
                Grid.Row="2"
                VerticalAlignment="Center"
                HorizontalAlignment="Left"
                Margin="20 0"
                Click="LogOutButton_Click"/>
    </Grid>
</Window>